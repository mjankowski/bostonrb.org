<p class="upcoming-event-title" data-role="event-name">
  <%= event.name %>
</p>

<div class="upcoming-event-date" data-role="event-date-info">
  <span>
    <%= event.date %></br>
    <%= "#{event.formatted_start_time} to #{event.formatted_end_time}" %>
  </span>
</div>

<div class="upcoming-event-location" data-role="event-venue-info">
  <span>
    <%= event.venue_name %></br>
    <%= event.address %></br>
    <%= "#{event.city}, #{event.state}" %>
  </span>
</div>

<div class="upcoming-event__buttons">
  <%= link_to(
    "RSVP",
    event.rsvp_url,
    class: "upcoming-event__button",
    target: "_blank"
  ) %>

  <%= link_to(
    "See all events",
    event.events_url,
    class: "upcoming-event__button",
    target: "_blank"
  ) %>
</div>
